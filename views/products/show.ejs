<% layout('layouts/boilerplate') -%>


  
  <div class="row">
    <div class=" col-lg-6 mt-3">
      <div class="card mx-auto" style="width: 18rem;">
        <img src="<%= item.img %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= item.name %>
          </h5>
          <p class="card-text">
            <%= item.desc %>
          </p>
          <p class="card-text">
            <%= item.price %>
          </p>
          <a href="#" class="btn btn-info">Buy</a>
          <form action="/user/<%= item._id %>" method="post" class="d-inline">
            <button class="btn btn-warning">Add to cart</button>
          </form>
          <a href="/products/<%= item._id %>/edit" class="btn btn-primary">Edit</a>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <h1 class="display-5">
        Leave a Review
      </h1>
      <form class="mb-4" action="/review/<%= item._id %>" method="post">
        <div >
          <!-- <label class="form-label" for="rating">Rating:</label>
                <input class="form-control" type="range" id="rating" min="0" max="5" name="rating" > -->
          <fieldset class="starability-basic">
    
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
              aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label class="form-label" for="comment">comment:</label>
          <textarea class="form-control" type="text" id="comment" name="comment"></textarea>
        </div>
        <button class="btn btn-sm btn-success">Submit</button>
      </form>
      <div class="my-3">

        <% for(let review of item.reviews ){ %>
          <div class="card mt-3">
            <div class="card-header rt-head">
              <p class="starability-result" data-rating="<%= review.rating %>">
                Rated: <%= review.rating %> stars
              </p>
              <% if(review.createdAt ) { %>
                <p><%= review.createdAt.toDateString() %></p>
                <% } %>
            </div>
            <div class="card-body">
              <p class="card-text">Comment: <%= review.comment %>
              </p>
              
              <a href="#" class="btn btn-primary">Delete</a>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </div>